{
    "version": 2,
    "builds": [
        {
            "src": "frontend/shop/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "frontend/shop/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_REST_API_ENDPOINT": "https://chawkbazar-api-production-3a97.up.railway.app/api/",
        "NEXT_PUBLIC_DEFAULT_LANGUAGE": "en",
        "NEXT_PUBLIC_ENABLE_MULTI_LANG": "true",
        "NEXT_PUBLIC_AVAILABLE_LANGUAGES": "en,ar",
        "REVALIDATE_DURATION": "120"
    },
    "build": {
        "env": {
            "NEXT_PUBLIC_REST_API_ENDPOINT": "https://chawkbazar-api-production-3a97.up.railway.app/api/",
            "NEXT_PUBLIC_DEFAULT_LANGUAGE": "en",
            "NEXT_PUBLIC_ENABLE_MULTI_LANG": "true",
            "NEXT_PUBLIC_AVAILABLE_LANGUAGES": "en,ar",
            "REVALIDATE_DURATION": "120"
        }
    }
}